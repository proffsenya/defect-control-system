{
  "info": {
    "name": "Система Контроля API",
    "description": "Коллекция для тестирования микросервисного API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "order_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Users",
      "item": [
        {
          "name": "Регистрация пользователя",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.test('Пользователь создан', () => {",
                  "        pm.expect(response.success).to.be.true;",
                  "        pm.expect(response.data).to.have.property('id');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"Test User\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/users/register",
              "host": ["{{base_url}}"],
              "path": ["v1", "users", "register"]
            }
          }
        },
        {
          "name": "Вход пользователя",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.data.token);",
                  "    pm.test('Токен получен', () => {",
                  "        pm.expect(response.success).to.be.true;",
                  "        pm.expect(response.data).to.have.property('token');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/users/login",
              "host": ["{{base_url}}"],
              "path": ["v1", "users", "login"]
            }
          }
        },
        {
          "name": "Получить профиль",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/v1/users/profile",
              "host": ["{{base_url}}"],
              "path": ["v1", "users", "profile"]
            }
          }
        },
        {
          "name": "Обновить профиль",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/users/profile",
              "host": ["{{base_url}}"],
              "path": ["v1", "users", "profile"]
            }
          }
        },
        {
          "name": "Список пользователей (admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/v1/users?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["v1", "users"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Создать заказ",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('order_id', response.data.id);",
                  "    pm.test('Заказ создан', () => {",
                  "        pm.expect(response.success).to.be.true;",
                  "        pm.expect(response.data).to.have.property('id');",
                  "        pm.expect(response.data.status).to.equal('created');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"name\": \"Кирпич\",\n      \"quantity\": 100,\n      \"price\": 50.5\n    },\n    {\n      \"name\": \"Цемент\",\n      \"quantity\": 50,\n      \"price\": 150\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/orders",
              "host": ["{{base_url}}"],
              "path": ["v1", "orders"]
            }
          }
        },
        {
          "name": "Получить список заказов",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/v1/orders?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["v1", "orders"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Получить заказ по ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/v1/orders/{{order_id}}",
              "host": ["{{base_url}}"],
              "path": ["v1", "orders", "{{order_id}}"]
            }
          }
        },
        {
          "name": "Обновить статус заказа",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"in_progress\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/orders/{{order_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["v1", "orders", "{{order_id}}", "status"]
            }
          }
        },
        {
          "name": "Отменить заказ",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/v1/orders/{{order_id}}",
              "host": ["{{base_url}}"],
              "path": ["v1", "orders", "{{order_id}}"]
            }
          }
        }
      ]
    }
  ]
}

